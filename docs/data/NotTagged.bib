  author = {Valladares, Fernando and {Zaragoza-Castells}, Joana and {Sanchez-Gomez}, David and Matesanz, Silvia and Alonso, Beatriz and Portsmuth, Angelika and Delgado, Antonio and Atkin, Owen K.},
