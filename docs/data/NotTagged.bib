  journal = {Science of The Total Environment},
  author = {Zhao, Yu and McElroy, Michael B. and Xing, Jia and Duan, Lei and Nielsen, Chris P. and Lei, Yu and Hao, Jiming},
  month = nov,
  year = {2011},
  keywords = {Not tagged},
  pages = {5177-5187},
  pmid = {21944199}
}

@article{Worm2009,
