  author = {Mouri, Goro and Golosov, Valentin and Chalov, Sergey and Takizawa, Satoshi and Oguma, Kumiko and Yoshimura, Kei and Shiiba, Michiharu and Hori, Tomoharu and Oki, Taikan},
