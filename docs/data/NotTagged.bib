  journal = {International Organization for Migration Geneva},
  url = {http://sro.sussex.ac.uk/12069/},
  author = {Kniveton, Dominic and {Schmidt-Verkerk}, Kerstin and Smith, Christopher and Black, Richard},
  year = {2008},
  keywords = {Not tagged},
  pages = {468-504},
  pmid = {10252113}
}

@article{Lambin2011a,
