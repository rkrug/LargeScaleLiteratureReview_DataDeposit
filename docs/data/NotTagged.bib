  journal = {Biotechnology for Biofuels},
  author = {b Lupoi, J.S.a and c Singh, S.b and e Davis, M.d and Lee, D.J.f and Shepherd, M.g and b c Simmons, B.A.a and Henry, R.J.a and {b Lupoi}, J.S.a and {c Singh}, S.b and {e Davis}, M.d and Lee, D.J.f and Shepherd, M.g and {b c Simmons}, B.A.a and Henry, R.J.a},
