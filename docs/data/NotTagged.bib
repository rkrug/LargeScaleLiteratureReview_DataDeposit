  author = {Lapola, David Montenegro and Schaldach, Ruediger and Alcamo, Joseph and Bondeau, Alberte and Msangi, Siwa and Priess, Joerg A. and Silvestrini, Rafaella and {Soares-Filho}, Britaldo Silveira},
