  author = {Arneth, Almut and Makkonen, Risto and Olin, Stefan and Paasonen, Pauli and Holst, Thomas and Kajos, Maija K. and Kulmala, Markku and Maximov, Trofim and Miller, Paul A. and Schurgers, Guy},
