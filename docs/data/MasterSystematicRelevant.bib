@article{Zhang2015g,
	Abstract = {Aim Forecasting potential patterns in species' distributions and$\backslash$ndiversity under climate change is crucial for biodiversity conservation.$\backslash$nAlthough high-latitude regions are expected to experience some of the$\backslash$ngreatest increases in temperature due to global warming, little is known$\backslash$non how individual responses in species will affect patterns in$\backslash$nphylogenetic diversity (PD).$\backslash$nLocation Alberta, Canada.$\backslash$nMethod sWe used 160,589 occurrence records for 1541 species of seed$\backslash$nplants in Alberta (nearly 90\% of the province's seed flora) and$\backslash$nensemble niche models to project current and future suitable habitats.$\backslash$nWe then examined climate change vulnerability of individual species and$\backslash$nthe potential impacts of climate change on species richness, PD and both$\backslash$ntaxonomic and phylogenetic endemism (PE). We also assessed whether$\backslash$npredicted losses of PD were distributed randomly across the plant tree$\backslash$nof life.$\backslash$nResults We found that 368 species (24\%) may lose on average $>$80\% of$\backslash$ntheir current suitable climates (habitats), while 539 species (35\%)$\backslash$nwere projected to more than double their current suitable range. Both$\backslash$nspecies richness and PD were predicted to increase in most areas, except$\backslash$nfor the species-rich Rocky Mountains, which are predicted to experience$\backslash$nfuture declines. Maps of taxonomic and PE identified several regions$\backslash$nwith high conservation value and climate change threat suggesting$\backslash$npriorities for conservation and climate change adaptation. Overall, a$\backslash$nnon-random extinction risk was found for Alberta's flora, demonstrating$\backslash$npotential future impacts of climate change on the loss of evolutionary$\backslash$nhistory.$\backslash$nMain conclusions Our analyses suggest that climate change will have$\backslash$nasymmetrical effects on the distribution of Alberta's plant diversity$\backslash$nand endemism and a non-random extinction risk of the current state of$\backslash$nspecies evolutionary history. Our results provide practical guidance for$\backslash$nbiodiversity conservation and management in this region by prioritizing$\backslash$nspecies' vulnerabilities and places with higher taxonomic or$\backslash$nevolutionary risk due to future climate change.},
	Author = {Zhang, Jian and Nielsen, Scott E. and Stolar, Jessica and Chen, Youhua and Thuiller, Wilfried},
