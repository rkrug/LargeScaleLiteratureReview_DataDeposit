	Journal = {Nature Climate Change},
	Keywords = {Master Systematic,Relevant,Done},
	Month = dec,
	Number = {4},
	Pages = {402-406},
	Title = {Enhanced Weathering Strategies for Stabilizing Climate and Averting Ocean Acidification},
	Volume = {6},
