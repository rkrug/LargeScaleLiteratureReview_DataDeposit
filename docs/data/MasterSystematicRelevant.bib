	Journal = {Global Change Biology},
	Keywords = {Master Systematic,Relevant,Done},
	Month = apr,
	Number = {4},
	Pages = {1505-1522},
	Title = {Synergistic and Antagonistic Interactions of Future Land Use and Climate Change on River Fish Assemblages},
	Volume = {22},
	Year = {2016},
