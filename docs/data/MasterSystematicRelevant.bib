	Title = {Quarantine Arthropod Invasions in {{Europe}}: The Role of Climate, Hosts and Propagule Pressure},
	Volume = {20},
	Year = {2014},
	Bdsk-Url-1 = {https://doi.org/10.1111/ddi.12149}}

