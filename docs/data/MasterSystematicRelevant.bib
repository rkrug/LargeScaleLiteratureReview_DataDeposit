	Journal = {Forest Ecology and Management},
	Keywords = {Master Systematic,Relevant},
	Month = jan,
	Pages = {367-375},
	Title = {Climate Change Impacts on the Sustainability of the Firewood Harvest and Vegetation and Soil Carbon Stocks in a Tropical Dry Forest in {{Santa Teresinha Municipality}}, {{Northeast Brazil}}},
