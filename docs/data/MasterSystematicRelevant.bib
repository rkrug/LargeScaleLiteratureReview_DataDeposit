	Pages = {3606-3614},
	Title = {Amazon's Vulnerability to Climate Change Heightened by Deforestation and Man-Made Dispersal Barriers},
	Volume = {18},
	Year = {2012},
	Bdsk-Url-1 = {https://doi.org/10.1111/gcb.12012}}

