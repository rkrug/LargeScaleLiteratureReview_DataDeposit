	Number = {4},
	Pages = {n/a-n/a},
	Title = {Integration of {{MODIS}} Land and Atmosphere Products with a Coupled-Process Model to Estimate Gross Primary Productivity and Evapotranspiration from 1 Km to Global Scales},
	Volume = {25},
