	Month = jul,
	Number = {2},
	Pages = {159-165},
	Title = {Species Extinction Risk Might Increase out of Reserves: Allowances for Conservation of Threatened Butterfly {{Actinote}} Quadra ({{Lepidoptera}}: {{Nymphalidae}}) under Global Warming},
